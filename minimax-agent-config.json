# MiniMax Agent Configuration for Logi Project

{
  "model": "deepseek-coder",
  "temperature": 0.1,
  "max_tokens": 4096,
  "context_window": 32768,
  "enable_thinking": true,
  "thinking_depth": "medium",
  
  "project": {
    "name": "Logi",
    "type": "kotlin-microservices",
    "framework": "spring-boot",
    "build_system": "gradle",
    "java_version": "25",
    "kotlin_version": "2.3.0",
    "gradle_version": "9.2.1"
  },
  
  "code_style": {
    "language": "kotlin",
    "indent_style": "space",
    "indent_size": 4,
    "line_ending": "lf",
    "max_line_length": 120
  },
  
  "dependencies": {
    "framework": "spring-boot",
    "version": "3.4.0",
    "database": "postgresql",
    "cache": "redis",
    "messaging": "kafka"
  },
  
  "testing": {
    "framework": "junit-5",
    "mockito": true,
    "testcontainers": true,
    "coverage_threshold": 80
  },
  
  "security": {
    "authentication": "keycloak",
    "encryption": "aes-256",
    "audit": "enabled"
  },
  
  "monitoring": {
    "metrics": "prometheus",
    "tracing": "zipkin",
    "logging": "elk"
  },
  
  "microservices": [
    "admin-panel",
    "scm-iam",
    "scm-audit",
    "scm-data-protection",
    "tms-service",
    "fms-service",
    "wms-service",
    "oms-service",
    "gis-subsystem",
    "freight-marketplace",
    "customs-service",
    "reverse-logistics",
    "autonomous-ops",
    "transport-platform",
    "yms-service",
    "cyber-resilience"
  ],
  
  "docker": {
    "base_image": "eclipse-temurin:25-jdk-alpine",
    "compose": true,
    "kubernetes": false
  },
  
  "ci_cd": {
    "github_actions": true,
    "sonar_quality_gate": true,
    "dependency_check": true
  },
  
  "documentation": {
    "swagger": true,
    "readme": true,
    "architecture": true
  }
}
